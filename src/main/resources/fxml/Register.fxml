<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="527.0" prefWidth="348.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.hbuas.netdisk.control.RegisterControl">
   <children>
      <Label layoutX="40.0" layoutY="52.0" text="用户名">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextField fx:id="username" layoutX="120.0" layoutY="47.0" prefHeight="30.0" prefWidth="182.0" />
      <Label layoutX="55.0" layoutY="98.0" text="密码">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <PasswordField fx:id="password" layoutX="120.0" layoutY="93.0" prefHeight="30.0" prefWidth="182.0" />
      <Label layoutX="25.0" layoutY="147.0" text="确认密码">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <PasswordField fx:id="confirmPassword" layoutX="120.0" layoutY="142.0" prefHeight="30.0" prefWidth="182.0" />
      <Label layoutX="55.0" layoutY="193.0" text="性别">
         <font>
            <Font size="15.0" />
         </font>
      </Label>

      <RadioButton fx:id="male" layoutX="131.0" layoutY="195.0" mnemonicParsing="false" selected="true" text="男">
         <toggleGroup>
            <ToggleGroup fx:id="sex" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="female" layoutX="197.0" layoutY="195.0" mnemonicParsing="false" text="女" toggleGroup="$sex" />
      <Label layoutX="55.0" layoutY="241.0" text="年龄">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <DatePicker fx:id="age" layoutX="118.0" layoutY="235.0" prefHeight="30.0" prefWidth="186.0" />
      <Label layoutX="55.0" layoutY="312.0" text="头像">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <ImageView fx:id="myImage" fitHeight="85.0" fitWidth="85.0" layoutX="122.0" layoutY="279.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../head/default.jpg" />
         </image>
      </ImageView>
      <Button fx:id="selectBtn" onAction="#select" layoutX="226.0" layoutY="332.0" mnemonicParsing="false" text="选择头像">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label layoutX="55.0" layoutY="384.0" text="电话">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextField fx:id="tel" layoutX="122.0" layoutY="379.0" prefHeight="30.0" prefWidth="182.0" />
      <Label layoutX="55.0" layoutY="432.0" text="邮箱">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextField fx:id="email" layoutX="121.0" layoutY="427.0" prefHeight="30.0" prefWidth="182.0" />
      <Button fx:id="registerBtn" layoutX="136.0" layoutY="478.0" mnemonicParsing="false" onAction="#register" prefHeight="23.0" prefWidth="76.0" text="立即注册">
         <font>
            <Font size="14.0" />
         </font></Button>
      <Button fx:id="loginBtn" layoutX="231.0" layoutY="478.0" mnemonicParsing="false" onAction="#login" text="返回登录">
         <font>
            <Font size="14.0" />
         </font></Button>
   </children>
</AnchorPane>
